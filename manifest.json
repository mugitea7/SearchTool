{
    "name": "1-Click検索",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "検索先サイトをカスタムできるツール",
    "options_ui": {
        "page": "option/option.html",
        "chrome_style": true
    },
    "permissions": [
        
        "contextMenus"
        
    ],
    "background": {
        "scripts": [
            "lib/jquery-3.5.1.min.js",
            "lib/jquery-ui.min.js",
            "src/background.js"
        ]
    },
    "browser_action":{
      "default_popup": "option/option.html",
      "default_icon": {
        "16": "img/16.png",
        "32": "img/32.png",
        "48": "img/48.png",
        "128": "img/128.png"
    }
  },
    "icons": {
        "16": "img/16.png",
        "32": "img/32.png",
        "48": "img/48.png",
        "128": "img/128.png"
    },
    "web_accessible_resources": [
        "src/default.json"
    ]
}
